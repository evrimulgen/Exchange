@model List<Exchange.Services.Models.ArbitrageResult>
@{
    ViewData["Title"] = "BTC Rich :: Canidate List";
}
<div>
    <h2>Potential Coins to Arbitrage</h2>
    <table id="arb" class="table table-striped table-dark">
        <thead>
            <tr>
                <th scope="col">Market</th>
                <th scope="col">Symbol</th>
                <th scope="col">Higher Priced Exchange</th>
                <th scope="col">HPE Price</th>
                <th scope="col">Lower Priced Exchange</th>
                <th scope="col">LPE Price</th>
                <th scope="col">Percent Difference</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderByDescending(c => c.Percentage))
            {
                <tr>
                    <td>@item.Market</td>
                    <td>@Html.ActionLink(item.Symbol, "Details", "Home", item)</td>
                    <td><a href="@item.Exchange1Link"  target="_blank">@item.Exchange1</a></td>
                    <td><b>@item.Exchange1Price.ToString("N8")</b></td>
                    <td><a href="@item.Exchange2Link"  target="_blank">@item.Exchange2</a></td>
                    <td><b>@item.Exchange2Price.ToString("N8")</b></td>
                    <td>@item.Percentage.ToString("N2")%</td>
                </tr>
            }
        </tbody>
    </table>
</div>
